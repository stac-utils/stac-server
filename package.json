{
  "displayName": "stac-server",
  "description": "A STAC API running on stac-server",
  "version": "4.2.0",
  "repository": "https://github.com/stac-utils/stac-server",
  "author": "Alireza Jazayeri, Matthew Hanson, Sean Harkins, Phil Varner",
  "license": "MIT",
  "type": "module",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "scripts": {
    "build": "./bin/build.sh",
    "lint": "eslint . --ext .js,.ts",
    "lint-js-fix": "eslint . --ext .js,.ts --fix",
    "check-openapi": "spectral lint src/lambdas/api/openapi.yaml --ruleset .spectral.yml",
    "test": "npm run test:unit && npm run test:system",
    "test:system": "./bin/system-tests.sh",
    "test:system:coverage": "c8 npm run test:system",
    "test:unit": "ava tests/unit/*.[tj]s",
    "test:unit:coverage": "c8 npm run test:unit",
    "typecheck": "tsc",
    "audit-prod": "npx better-npm-audit audit --production",
    "audit": "npx better-npm-audit audit",
    "deploy": "sls deploy",
    "sls-remove": "sls remove",
    "package": "sls package",
    "serve": "REQUEST_LOGGING_FORMAT=dev LOG_LEVEL=debug STAC_API_URL=http://localhost:3000 ENABLE_TRANSACTIONS_EXTENSION=true nodemon --exec node --loader ts-node/esm ./src/lambdas/api/local.ts",
    "build-api-docs": "npx @redocly/cli build-docs src/lambdas/api/openapi.yaml -o ./docs/index.html",
    "prepare": "husky"
  },
  "ava": {
    "verbose": true,
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m",
    "typescript": {
      "rewritePaths": {
        "test/": "dist/test/"
      },
      "compile": "tsc"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/stac-utils/stac-server/issues"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@aws-sdk/client-secrets-manager": "^3.787.0",
    "@aws-sdk/client-sns": "^3.787.0",
    "@aws-sdk/client-sqs": "^3.787.0",
    "@aws-sdk/credential-provider-node": "^3.787.0",
    "@aws-sdk/s3-request-presigner": "^3.787.0",
    "@mapbox/extent": "^0.4.0",
    "@opensearch-project/opensearch": "^2.13.0",
    "@redocly/cli": "^1.34.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "got": "^13.0",
    "http-errors": "^2.0.0",
    "lodash-es": "^4.17.21",
    "memorystream": "^0.3.1",
    "morgan": "^1.10.0",
    "p-filter": "^4.1.0",
    "serverless-http": "^3.2.0",
    "through2": "^4.0.2",
    "ts-loader": "^9.5.2",
    "winston": "^3.17.0",
    "xml2js": "0.6.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/aws-lambda": "^8.10.149",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/luxon": "^3.6.2",
    "@types/memorystream": "^0.3.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "ava": "^5.3",
    "aws-event-mocks": "^0.0.0",
    "aws-sdk-client-mock": "^4.1.0",
    "better-npm-audit": "^3.11.0",
    "c8": "^10.1.3",
    "copy-webpack-plugin": "^13.0.0",
    "crypto-random-string": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^51.3.3",
    "husky": "^9.1.7",
    "luxon": "^3.6.1",
    "nock": "^14.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "prettier-eslint-cli": "^8.0.1",
    "proxyquire": "^2.1.3",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.9.0",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "webpack": "^5.99.6",
    "webpack-cli": "^6.0.1",
    "zip-webpack-plugin": "^4.0.3"
  },
  "name": "stac-server"
}
